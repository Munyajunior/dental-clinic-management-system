# .env.production.example - production values (placeholders only)
# Use a secrets manager to inject values in production. Never commit real secrets.

ENVIRONMENT=production
API_PREFIX=/api/v2
DEBUG=false
ALLOWED_ORIGINS=https://your-production-domain.com

DB_DRIVER=postgresql+asyncpg
DB_HOST=your-db-host
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=dental_db
SQLITE_MODE=false

REQUIRE_REDIS=true
CACHE_ENABLED=true
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

SECRET_KEY=base64-or-long-random-secret
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30
ALGORITHM=HS256
REFRESH_TOKEN_ROTATION=true

CREATE_DEFAULT_TENANT=false
TENANT_SUBDOMAIN_ENABLED=true
RLS_ENABLED=true

UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
WORKERS_COUNT=4
RELOAD=false

FILE_ENCRYPTION_KEY=base64-key
MEDICAL_RECORDS_STORAGE_PATH=/var/data/medical_records
STRIPE_SECRET_KEY=sk_live_xxx
