# .env.example - dental-clinic-management-system
# Copy this file to .env and fill the values. DO NOT commit real secrets.

# Environment
ENVIRONMENT=development
API_PREFIX=/api/v2
DEBUG=true
ALLOWED_ORIGINS=*

# Database (asyncpg / PostgreSQL)
DB_DRIVER=postgresql+asyncpg
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=dental_db
DB_DOMAIN=
SQLITE_MODE=false

# Redis (optional)
REQUIRE_REDIS=true
CACHE_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT / Security
SECRET_KEY=replace-with-a-secure-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256
REFRESH_TOKEN_ROTATION=false

# Tenant / RLS
CREATE_DEFAULT_TENANT=true
TENANT_ID_HEADER=X-Tenant-ID
TENANT_SUBDOMAIN_ENABLED=true
RLS_ENABLED=true

# Uvicorn / App server
UVICORN_HOST=127.0.0.1
UVICORN_PORT=8000
WORKERS_COUNT=1
RELOAD=true

# File storage & encryption
FILE_ENCRYPTION_KEY=replace-with-base64-key
MEDICAL_RECORDS_STORAGE_PATH=./files/medical_records

# Payment / External services
STRIPE_SECRET_KEY=

# Notes
# 1) Never commit real secrets to the repository. Use a secrets manager (Vault, Azure Key Vault, AWS Secrets Manager)
# 2) For production, run the app behind a proper WSGI/ASGI server or container orchestration and use environment-specific secret injection.
